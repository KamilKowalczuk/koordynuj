---
// src/components/icons/InefficiencyIcon.astro
interface Props {
  className?: string;
  decorative?: boolean;
  title?: string;
  strokeWidth?: number;
  [key: string]: any; // pozwala przekazać dowolne atrybuty (id, data-*, itp.)
}

const {
  className = "",
  decorative = true,
  title = "Niewydajność",
  strokeWidth = 1.5,
  ...rest
} = Astro.props as Props;

// Spójne domyślne style + merge z className oraz z atrybutem `class` podanym przy użyciu komponentu
const base =
  "h-8 w-8 text-brand-blue mb-4 shrink-0 transition-transform duration-300 group-hover:scale-110";
const mergedClass = [base, className, (Astro.props as any).class].filter(Boolean).join(" ");
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  role="img"
  aria-hidden={decorative ? "true" : "false"}
  aria-label={decorative ? undefined : title}
  class={mergedClass}
  {...rest}
>
  { !decorative && <title set:text={title} /> }
  <!-- Zegar/zwłoka: „inefficiency” -->
  <path d="M12 6v6h4.5" />
  <path d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
</svg>
 