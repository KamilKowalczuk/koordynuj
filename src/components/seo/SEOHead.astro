---
// src/components/seo/SEOHead.astro
// ENTERPRISE-GRADE SEO COMPONENT - Pełna integracja z @strapi/plugin-seo
// ENHANCED: Open Graph dimensions, article metadata, proper dates

import type { SeoData } from '../../lib/strapi';
import { getStrapiMediaUrl } from '../../lib/strapi';

interface Props {
  seo?: SeoData | null;
  fallbackTitle?: string;
  fallbackDescription?: string;
  fallbackImage?: string;
  type?: 'website' | 'article';
  publishedTime?: string;  // NOWE: Data publikacji dla artykułów
  modifiedTime?: string;   // NOWE: Data modyfikacji dla artykułów
  author?: string;         // NOWE: Autor artykułu
}

const { 
  seo, 
  fallbackTitle = "Koordynuj Zdrowie", 
  fallbackDescription = "Zarządzanie medycyną. Zredukowane do perfekcji.",
  fallbackImage,
  type = 'website',
  publishedTime,
  modifiedTime,
  author = "Koordynuj Zdrowie"
} = Astro.props;

// Current page URL - teraz używa site z astro.config.mjs
const currentUrl = new URL(Astro.url.pathname, Astro.site);

// Meta Title & Description
const metaTitle = seo?.metaTitle || fallbackTitle;
const metaDescription = seo?.metaDescription || fallbackDescription;

// Meta Image
const metaImageUrl = seo?.metaImage 
  ? getStrapiMediaUrl(seo.metaImage) 
  : (fallbackImage || `${currentUrl.origin}/og-default.jpg`);

// Image alt text
const metaImageAlt = seo?.metaImage?.alternativeText || metaTitle;

// Open Graph
const ogTitle = seo?.openGraph?.ogTitle || metaTitle;
const ogDescription = seo?.openGraph?.ogDescription || metaDescription;
const ogImageUrl = seo?.openGraph?.ogImage 
  ? getStrapiMediaUrl(seo?.openGraph?.ogImage) 
  : metaImageUrl;
const ogImageAlt = seo?.openGraph?.ogImage?.alternativeText || metaImageAlt;
const ogUrl = seo?.openGraph?.ogUrl || currentUrl.href;
const ogType = seo?.openGraph?.ogType || type;

// Keywords
const keywords = seo?.keywords || '';

// Robots
const metaRobots = seo?.metaRobots || 'index, follow';

// Viewport
const metaViewport = seo?.metaViewport || 'width=device-width, initial-scale=1';

// Canonical URL
const canonicalURL = seo?.canonicalURL || currentUrl.href;

// Structured Data (JSON-LD)
const structuredData = seo?.structuredData;
---

<!-- Primary Meta Tags -->
<title>{metaTitle}</title>
<meta name="title" content={metaTitle} />
<meta name="description" content={metaDescription} />
{keywords && <meta name="keywords" content={keywords} />}
<meta name="robots" content={metaRobots} />
<meta name="viewport" content={metaViewport} />
<meta name="author" content={author} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={ogUrl} />
<meta property="og:title" content={ogTitle} />
<meta property="og:description" content={ogDescription} />
<meta property="og:site_name" content="Koordynuj Zdrowie" />
<meta property="og:locale" content="pl_PL" />

<!-- Open Graph Image with Dimensions -->
{ogImageUrl && (
  <>
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:secure_url" content={ogImageUrl} />
    <meta property="og:image:alt" content={ogImageAlt} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/jpeg" />
  </>
)}

<!-- Article Specific Meta Tags -->
{type === 'article' && (
  <>
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    <meta property="article:author" content={author} />
    <meta property="article:section" content="Zdrowie" />
  </>
)}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={ogUrl} />
<meta name="twitter:title" content={ogTitle} />
<meta name="twitter:description" content={ogDescription} />
{ogImageUrl && (
  <>
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:image:alt" content={ogImageAlt} />
  </>
)}
<meta name="twitter:site" content="@KoordynujZdrowie" />
<meta name="twitter:creator" content="@KoordynujZdrowie" />

<!-- Additional Meta Tags -->
<meta name="theme-color" content="#00A9E0" />
<meta name="format-detection" content="telephone=no" />
<meta http-equiv="x-ua-compatible" content="ie=edge" />

<!-- Language and Geographic -->
<meta name="language" content="Polish" />
<meta name="geo.region" content="PL" />
<meta name="geo.placename" content="Warszawa" />

<!-- Structured Data (JSON-LD) from Strapi -->
{structuredData && (
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
)}

<!-- Default Organization Schema (jeśli brak custom structured data) -->
{!structuredData && type === 'website' && (
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "MedicalBusiness",
    "name": "Koordynuj Zdrowie",
    "description": metaDescription,
    "url": currentUrl.origin,
    "logo": {
      "@type": "ImageObject",
      "url": `${currentUrl.origin}/logo.svg`,
      "width": "200",
      "height": "60"
    },
    "image": ogImageUrl,
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+48-535-604-904",
      "contactType": "customer service",
      "areaServed": "PL",
      "availableLanguage": ["Polish"]
    },
    "address": {
      "@type": "PostalAddress",
      "addressCountry": "PL",
      "addressRegion": "Mazowieckie",
      "addressLocality": "Warszawa"
    },
    "sameAs": [
      "https://facebook.com/koordynujzdrowie",
      "https://linkedin.com/company/koordynujzdrowie"
    ]
  })} />
)}

<!-- Enhanced Article Schema for Blog Posts -->
{type === 'article' && !structuredData && (
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": metaTitle,
    "description": metaDescription,
    "image": {
      "@type": "ImageObject",
      "url": ogImageUrl,
      "width": 1200,
      "height": 630
    },
    "url": currentUrl.href,
    "datePublished": publishedTime || new Date().toISOString(),
    "dateModified": modifiedTime || publishedTime || new Date().toISOString(),
    "author": {
      "@type": "Organization",
      "name": author,
      "url": currentUrl.origin
    },
    "publisher": {
      "@type": "Organization",
      "name": "Koordynuj Zdrowie",
      "logo": {
        "@type": "ImageObject",
        "url": `${currentUrl.origin}/logo.svg`,
        "width": 200,
        "height": 60
      }
    },
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": currentUrl.href
    },
    "articleSection": "Zdrowie",
    "inLanguage": "pl-PL"
  })} />
)}