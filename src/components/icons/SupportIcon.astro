---
// src/components/icons/SupportIcon.astro
interface Props {
  className?: string;
  decorative?: boolean;
  title?: string;
  strokeWidth?: number;
  [key: string]: any;
}

const {
  className = "",
  decorative = true,
  title = "Wsparcie",
  strokeWidth = 1.5,
  ...rest
} = Astro.props as Props;

const base =
  "h-8 w-8 text-brand-blue mb-4 shrink-0 transition-transform duration-300 group-hover:scale-110";
const mergedClass = [base, className, (Astro.props as any).class].filter(Boolean).join(" ");
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  role="img"
  aria-hidden={decorative ? "true" : "false"}
  aria-label={decorative ? undefined : title}
  class={mergedClass}
  {...rest}
>
  { !decorative && <title set:text={title} /> }
