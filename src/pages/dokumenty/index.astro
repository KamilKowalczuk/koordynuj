---
// src/pages/dokumenty/index.astro
import MainLayout from '../../layouts/MainLayout.astro';
import SEOHead from '../../components/seo/SEOHead.astro';
import AnimateOnScroll from '../../components/ui/AnimateOnScroll.astro';
import Header from '../../components/layout/Header.svelte';
import Footer from '../../components/layout/Footer.astro';
import ServicePanel from '../../components/ui/ServicePanel.svelte';
import Logo from '../../components/ui/Logo.astro';
import { getLegalDocuments } from '../../lib/strapi';
import type { LegalDocument } from '../../lib/strapi';

const documents = await getLegalDocuments();

const documentIcons: Record<string, string> = {
  'polityka-prywatnosci': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>`,
  'regulamin': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>`,
  'rodo': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>`,
  'polityka-cookies': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>`
};

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('pl-PL', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
};
---

<!doctype html>
<html lang="pl">
<head>
  <meta charset="UTF-8" />
  <meta name="generator" content={Astro.generator} />
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400&display=swap" rel="stylesheet">
  
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <SEOHead 
    fallbackTitle="Dokumenty Prawne | Koordynuj Zdrowie"
    fallbackDescription="Polityka prywatności, regulamin i inne dokumenty prawne Koordynuj Zdrowie."
  />
</head>
<body class="bg-background-light text-text-primary font-sans antialiased">
  <style is:global>
    @import '../../styles/global.css';
  </style>

  <Header client:load>
    <div slot="logo">
      <a href="/" class="flex-shrink-0">
        <Logo isHomepage={false} />
      </a>
    </div>
  </Header>
  
  <main>
    <div class="pt-32 sm:pt-40 pb-12 sm:pb-16 bg-gradient-to-b from-background-muted to-background-light relative overflow-hidden">
      <div class="absolute inset-0 opacity-[0.02] pointer-events-none">
        <div class="documents-bg-pattern absolute inset-0"></div>
      </div>
      
      <AnimateOnScroll>
        <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h1 class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-text-primary mb-6 tracking-tight">
            Dokumenty Prawne
          </h1>
          <p class="text-lg text-text-muted max-w-2xl mx-auto">
            Wszystkie niezbędne informacje dotyczące ochrony danych osobowych i zasad świadczenia usług.
          </p>
        </div>
      </AnimateOnScroll>
    </div>

    <div class="py-16 sm:py-20 bg-background-light">
      <AnimateOnScroll>
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
          {documents && documents.length > 0 ? (
            <div class="grid gap-6">
              {documents.map((doc) => (
                <a 
                  href={`/dokumenty/${doc.slug}`}
                  class="document-card group flex items-start gap-6 p-6 md:p-8 bg-white border border-slate-200/80 rounded-3xl shadow-sm transition-all duration-500 hover:border-brand-blue/50 hover:shadow-xl hover:shadow-brand-blue/10"
                >
                  <div class="flex-shrink-0 w-14 h-14 bg-brand-blue/10 rounded-2xl flex items-center justify-center transition-all duration-300 group-hover:bg-brand-blue/20 group-hover:scale-110">
                    <svg class="w-7 h-7 text-brand-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <Fragment set:html={documentIcons[doc.documentType]} />
                    </svg>
                  </div>
                  
                  <div class="flex-grow">
                    <h2 class="text-2xl font-bold text-text-primary mb-2 group-hover:text-brand-blue transition-colors duration-300">
                      {doc.title}
                    </h2>
                    {doc.excerpt && (
                      <p class="text-text-muted mb-3 leading-relaxed">
                        {doc.excerpt}
                      </p>
                    )}
                    <div class="flex items-center gap-4 text-sm text-text-muted">
                      <span>Ostatnia aktualizacja: {formatDate(doc.lastUpdated)}</span>
                    </div>
                  </div>

                  <div class="flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <svg class="w-6 h-6 text-brand-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </div>
                </a>
              ))}
            </div>
          ) : (
            <div class="text-center py-16">
              <svg class="w-16 h-16 mx-auto text-text-muted/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <p class="text-text-muted text-lg">Dokumenty w przygotowaniu...</p>
            </div>
          )}
        </div>
      </AnimateOnScroll>
    </div>
  </main>

  <ServicePanel client:load />
  <Footer />
</body>
</html>

<style>
  .documents-bg-pattern {
    background-image: 
      radial-gradient(circle at 20% 30%, rgba(0, 169, 224, 0.08) 1px, transparent 1px),
      radial-gradient(circle at 80% 70%, rgba(0, 169, 224, 0.06) 1px, transparent 1px);
    background-size: 180px 180px, 220px 220px;
  }

  .document-card {
    position: relative;
  }

  .document-card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 1.5rem;
    background: linear-gradient(135deg, rgba(0, 169, 224, 0.03), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .document-card:hover::before {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .document-card {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>